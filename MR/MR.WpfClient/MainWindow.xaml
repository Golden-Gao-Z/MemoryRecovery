<Window x:Class="MR.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MR.WpfClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        KeyUp="Window_KeyUp">
    <Grid>
        <DockPanel>
            <Button DockPanel.Dock="Bottom" Margin="10" Height="30" Click="Button_Click" Content="Random"/>
            <TextBlock DockPanel.Dock="Top" x:Name="ShowTitle" TextWrapping="WrapWithOverflow" Padding="10"/>
            <TextBlock x:Name="ShowMemo" TextWrapping="WrapWithOverflow" Padding="10,20"/>
        </DockPanel>
    </Grid>
</Window>
