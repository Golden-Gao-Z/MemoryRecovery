<Window x:Class="MR.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MR.WpfClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="1300"
        WindowStartupLocation="CenterScreen"
        KeyUp="Window_KeyUp"
        Loaded="Window_Loaded">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right" Orientation="Horizontal">
                <Button  Margin="10" Height="30" Width="100" Click="Button_Click" Content="Random"/>
                <Button  Margin="10" Height="30" Click="Button_Click_1" Content="Reload"/>
            </StackPanel>
            <ScrollViewer DockPanel.Dock="Right" Width="500" Padding="10" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <TextBlock  x:Name="ShowContent" TextWrapping="WrapWithOverflow"/>
            </ScrollViewer>
            <TextBlock DockPanel.Dock="Top" x:Name="ShowTitle" TextWrapping="WrapWithOverflow" Padding="10"/>
            <TextBlock x:Name="ShowMemo" LineHeight="23"  TextWrapping="WrapWithOverflow" Padding="10,20" />
        </DockPanel>
    </Grid>
</Window>
